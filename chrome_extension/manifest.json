{
  "manifest_version": 3,
  "name": "잘 봐 이게 ShowRoom",
  "version": "1.0",
  "icons": {
    "16": "icons/main.png",
    "48": "icons/main.png",
    "128": "icons/main.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "sounds/cat.mp3",
      "icons/cube.png",
      "icons/comment.svg"
    ],
    "matches": ["<all_urls>"]
  }],
  "permissions": ["scripting", "activeTab", "storage", "contextMenus"],
  "host_permissions": [
    "https://*.airbnb.com/*",
    "https://*.airbnb.co.kr/*",
    "https://91f8-163-152-3-169.ngrok-free.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.airbnb.com/*", "https://*.airbnb.co.kr/*"],
      "js": ["content.js"]
    }
  ]
}